<Window x:Class="Library.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Windows"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" Background="#FF5FC37A" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="User" HorizontalAlignment="Left" Margin="96,35,0,0" VerticalAlignment="Top" Height="30" Width="161"/>
        <TextBox x:Name="UserTxt"  HorizontalAlignment="Left" Margin="96,70,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PassTxt" HorizontalAlignment="Left" Margin="96,113,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Enter" Content="Submit" HorizontalAlignment="Left" Margin="96,158,0,0" VerticalAlignment="Top" Click="Enter_Click"/>

    </Grid>
</Window>
